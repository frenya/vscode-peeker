{
  "name": "vscode-peeker",
  "displayName": "Peeker",
  "description": "Instantly look up selected text on the web using a predefined url template",
  "icon": "resources/logo/icon.png",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:peeker.show"
  ],
  "main": "./dist/extension.js",
  "publisher": "frenya",
  "author": {
    "name": "Frantisek Vymazal",
    "email": "frenya@frenya.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frenya/vscode-peeker"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Peeker",
      "properties": {
        "peeker.template": {
          "type": "string",
          "scope": "resource",
          "description": "URL template for the web lookup, %s will be replace with current selection"
        }
      }
    },
    "commands": [
      {
        "command": "peeker.show",
        "title": "Open Peeker"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}
